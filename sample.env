# Copy to .env and fill actual secrets/values

# Core
MIX_ENV=prod
N2TG_LOG_LEVEL=info

# Telegram
N2TG_TG_BOT_TOKEN=replace-me
N2TG_TG_CHAT_ID=-1001234567890

# Mode: authors | followlist
N2TG_MODE=authors
N2TG_AUTHORS=
N2TG_FOLLOWLIST_PUBKEY=

# Relays (comma-separated)
N2TG_NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol

# Formatting
N2TG_TG_PREFIX=New Nostr article:
N2TG_TG_AUTHOR_PREFIX=By:

# Links
N2TG_LINK_NADDR_BASE=https://njump.me/
N2TG_LINK_NIP05_BASE=https://example.com/nostr
N2TG_LINK_NPROFILE_BASE=https://njump.me/

# Behavior
N2TG_DRY_RUN=1
N2TG_SYNC_ALL_ON_EMPTY=0
N2TG_MAX_PER_RUN=

# Timing (ms)
N2TG_TG_POLL_TIMEOUT_MS=10000
N2TG_SYNC_INTERVAL_MS=3600000
